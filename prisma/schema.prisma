generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  name      String?
  entries   Entry[]
  tasks     Task[]
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Entry {
  id            String   @id @default(uuid())
  user          User?    @relation(fields: [userId], references: [id])
  userId        String?  @map("user_id")
  content       String
  title         String?
  summary       String?
  mood          Int?     @default(5)
  moodIntensity Int?     @default(5) @map("mood_intensity")
  gratitude     Json?    @default("[]")
  promptAnswers Json?    @default("{}") @map("prompt_answers")
  aiMetadata    Json?    @map("ai_metadata")
  source        String   @default("text")
  isLocked      Boolean  @default(false) @map("is_locked")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime? @updatedAt @map("updated_at")
  tasks         Task[]

  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@index([userId, createdAt(sort: Desc)])
  @@index([userId, isLocked])
  @@map("entries")
}

model Task {
  id          String    @id @default(uuid())
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?   @map("user_id")
  entry       Entry?    @relation(fields: [entryId], references: [id])
  entryId     String?   @map("entry_id")
  title       String
  description String?
  priority    String    @default("medium")
  status      String    @default("todo")
  ifThenPlan  String?   @map("if_then_plan")
  dueDate     DateTime? @map("due_date")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([userId])
  @@index([entryId])
  @@index([status])
  @@index([userId, status])
  @@index([userId, createdAt(sort: Desc)])
  @@map("tasks")
}
